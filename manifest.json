{
  "name": "Standby lb detector",
  "version": "2020.3.23",
  "author": "Magnus Watn",
  "manifest_version": 2,
  "icons": {
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "permissions": [
    "https://*/",
    "webRequest",
    "storage"
  ],
  "page_action": {
    "default_icon": {
      "64": "icon64.png"
    }
  },
  "omnibox": {
    "keyword": "b"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": [
        "contentScript.js"
      ],
      "css": [
        "standby-lb-detector-css.css"
      ],
      "matches": [
        "https://*/xui/"
      ]
    },
    {
      "run_at": "document_idle",
      "js": [
        "contentScriptLoginPage.js"
      ],
      "matches": [
        "https://*/tmui/login.jsp*"
      ]
    }
  ]
}
